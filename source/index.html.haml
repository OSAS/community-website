.row
  .blog-posts.col-sm-8

    %section.container

      %h2 Red Hat Community News

      = partial :blog_posts, locals: locals

  .upcoming-events.col-sm-4

    %h2 Now &amp; Upcoming

    %dl.upcoming-list
      - max_events = 10
      - event_count = 0

      - current_events.each do |year_name, year|
        - year.each do |conf_slug, conf|
          - if conf.type && conf.type == 'series'
            - if conf.talks
              - conf.talks.each do |talk|
                - event_count += 1

                - unless event_count > max_events
                  %dd.upcoming-date
                    %span.day= Date.parse(talk.start).strftime('%-d')
                    %span.month= Date.parse(talk.start).strftime('%b')
                  %dt.upcoming-event
                    %a{:href => "/events/##{conf_slug.parameterize}--#{talk.title.parameterize}"}
                      = talk.title

          - elsif conf.start
            - event_count += 1

            - unless event_count > max_events
              %dd.upcoming-date
                %span.day= conf.start.strftime('%-d')
                %span.month= conf.start.strftime('%b')
              %dt.upcoming-event
                %a{:href => "/events/##{conf_slug.parameterize}"}
                  = conf.name

      .more=link_to "View all current events&hellip;", "/events/"
